<div class="grid_16">

  <div class="box">
    <h2>
      <a href="#" id="toggle-show_local_user"><%=t :show_local_user %></a>
    </h2>
    <ul class="nav main">
      <li>
        <%= link_to t(:captive_portal), '#' %>
        <ul>
          <li>
            <%= link_to t(:edit), edit_captive_portal_local_user_path(@captive_portal, @local_user) %>
          </li>
          <li>
            <%= link_to t(:destroy), captive_portal_local_user_path(@captive_portal, @local_user), :confirm => t(:are_you_sure), :method => :delete %>
          </li>
        </ul>
      </li>
      <li>
        <%= link_to t(:back), captive_portal_local_users_path(@captive_portal) %>
      </li>
    </ul>
    
    <div class="block" id="show_local_user">

      <p class="meta" id="notice"><%= notice %>&nbsp;</p>

      <table>
        <tbody>
        <tr class="<%= cycle("even", "odd") -%>">
          <th><%=t :username %></th>
          <td><%=h @local_user.username %></td>
        </tr>
        <tr class="<%= cycle("even", "odd") -%>">
          <th><%=t :max_upload_bandwidth %></th>
          <td><%=h @local_user.max_upload_bandwidth %></td>
        </tr>
        <tr class="<%= cycle("even", "odd") -%>">
          <th><%=t :max_download_bandwidth %></th>
          <td><%=h @local_user.max_download_bandwidth %></td>
        </tr>
        <tr class="<%= cycle("even", "odd") -%>">
          <th><%=t :disabled %></th>
          <td><%=t @local_user.disabled ? :yes : :no %></td>
        </tr>
        <tr class="<%= cycle("even", "odd") -%>">
          <th><%=t :disabled_message %></th>
          <td><%=h @local_user.disabled_message %></td>
        </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>
<div class="clear"></div>